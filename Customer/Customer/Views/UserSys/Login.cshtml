
@{
    ViewBag.Title = "Login";
}
<h2></h2>

<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "UserSys", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                if (ViewBag.Message != null)
                {


                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @ViewBag.Message
                    </div>
                }
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label for="email" class="col-md-2 control-label">E-mail:</label>
                    <div class="col-md-10">
                        @if (ViewBag.Message == null)
                        {
                            @Html.TextBox("email", null, new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.TextBox("email", null, new { @class = "form-control", @style = "border: 1px solid #FF0000;" })
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-md-2 control-label">Password:</label>
                    <div class="col-md-10">
                        @if (ViewBag.Message == null)
                        {
                            @Html.Password("password", null, new { @class = "form-control" })
                        }
                        else
                        {
                            @Html.Password("password", null, new { @class = "form-control", @style = "border: 1px solid #FF0000;" })

                        }

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Entrar" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}